{
  "name": "web-server",
  "description": "Lan-drive replaces your pen-drive by letting your share a folder on your local area network without the hassles of configuring a shared folder on windows, samba server or any other technique.",
  "version": "0.0.0",
  "homepage": "",
  "private": false,
  "main": "src",
  "keywords": [
    "feathers"
  ],
  "author": {
    "name": "J Rui Pinto",
    "email": "social.jruipinto@gmail.com"
  },
  "contributors": [],
  "bugs": {},
  "directories": {
    "lib": "src",
    "test": "test/",
    "config": "config/"
  },
  "engines": {
    "node": "^12.0.0",
    "npm": ">= 3.0.0"
  },
  "scripts": {
    "test": "npm run lint && npm run compile && npm run mocha",
    "lint": "eslint src/. test/. --config .eslintrc.json --ext .ts --fix",
    "dev": "ts-node-dev --no-notify src/",
    "start": "npm run buildOld && node ../../dist/app/web-server",
    "mocha": "ts-mocha \"test/**/*.ts\" --recursive --exit",
    "buildOld": "shx rm -rf ../../dist/app/web-server && tsc"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": []
  },
  "types": "lib/",
  "dependencies": {
    "@feathersjs/configuration": "^4.5.5",
    "@feathersjs/errors": "^4.5.5",
    "@feathersjs/express": "^4.5.6",
    "@feathersjs/feathers": "^4.5.5",
    "@feathersjs/socketio": "^4.5.6",
    "@feathersjs/transport-commons": "^4.5.5",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dauria": "^2.0.0",
    "directory-tree-promise": "^2.0.1",
    "feathers-blob": "^2.2.0",
    "fs-blob-store": "^5.2.1",
    "helmet": "^3.23.3",
    "multer": "^1.4.2",
    "serve-favicon": "^2.5.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/helmet": "0.0.47",
    "@types/mocha": "^8.0.0",
    "@types/multer": "^1.4.3",
    "@types/serve-favicon": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "axios": "^0.19.2",
    "eslint": "^7.4.0",
    "mocha": "^8.0.1",
    "shx": "^0.3.2",
    "ts-mocha": "^7.0.0",
    "ts-node-dev": "^1.0.0-pre.52",
    "typescript": "^3.9.7"
  }
}
