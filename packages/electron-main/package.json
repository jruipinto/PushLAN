{
  "name": "electron-main",
  "version": "1.0.0",
  "description": "A minimal Electron application written with Typescript",
  "scripts": {
    "build": "tsc && npm run copyIconToDist && npm run copyBackendConfigToDist && shx mkdir -p ../../dist/uploads",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "electron ../../dist/electron-main/src/main.js",
    "copyIconToDist": "shx mkdir -p  ../../dist/app/electron-main/src/icon && shx cp -fr src/icon ../../dist/app/electron-main/src/",
    "copyBackendConfigToDist": "shx mkdir -p  ../../dist/config && shx cp -fr ../backend/config ../../dist/"
  },
  "repository": "https://github.com/electron/electron-quick-start-typescript",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.0.4",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5",  
    "shx": "^0.3.2"
  }
}
